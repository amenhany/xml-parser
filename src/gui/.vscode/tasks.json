{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "MinGW Makefiles",
                "-DQt6_DIR=E:/DSA/Qt/AppFiles/6.10.1/mingw_64/lib/cmake/Qt6",
                ".."
            ],
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "."],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "CMake: configure",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}
